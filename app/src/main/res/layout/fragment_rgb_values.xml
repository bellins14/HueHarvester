<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/red_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/red_txt"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:background="@drawable/border_red"
            android:gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/green_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/green_txt"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:background="@drawable/border_green"
            android:gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/blue_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/blue_txt"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:background="@drawable/border_blue"
            android:gravity="center"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/average_color_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/avg_color_txt"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:background="@drawable/border_gray"
            android:gravity="center"/>
    </FrameLayout>
</LinearLayout>

